#include <stdio.h>
#include "xparameters.h"
#include "xil_cache.h"
#include "xgpio.h"
#include "gpio_header.h"
#include "xtmrctr.h"
#include "tmrctr_header.h"

XTmrCtr TimerInstance;

void timerDelay(int delay_ms) {
	int status = 0;

	status = XTmrCtr_Initialize(&TimerInstance, XPAR_AXI_TIMER_0_DEVICE_ID);
	if (status != XST_SUCCESS) {
		print("Timer could not be initialized!!!");
		while(1);
	}

	XTmrCtr_SetOptions(&TimerInstance, 0, XTC_DOWN_COUNT_OPTION | XTC_INT_MODE_OPTION);
	XTmrCtr_SetResetValue(&TimerInstance, 0, (XPAR_AXI_TIMER_0_CLOCK_FREQ_HZ / 1000) * delay_ms);
	XTmrCtr_Start(&TimerInstance, 0);

	while(!XTmrCtr_IsExpired(&TimerInstance, 0));

	XTmrCtr_Stop(&TimerInstance, 0);
}

